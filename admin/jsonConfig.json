{
	"i18n": true,
	"type": "tabs",
	"items": {
		"_main": {
			"type": "panel",
			"label": "Haupteinstellungen",
			"items": {
				"FeedInDataPoint": {
					"type": "objectId",
					"label": "Einspeisungs-Datenpunkt",
					"default": "",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 6
				},
				"feedinNegativ": {
					"type": "checkbox",
					"label": "Einspeisewert negativ",
					"default": false
				},
				"delaySeconds": {
					"type": "number",
					"label": "Verzögerung zwischen Schaltungen (Sekunden)",
					"default": 60,
					"min": 10,
					"max": 600,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 6
				},
				"delaySecondsProzent": {
					"type": "number",
					"label": "Verzögerung zwischen Schaltungen (Sekunden) für Prozentregelung",
					"default": 60,
					"min": 10,
					"max": 600,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 6
				},
				"baseload": {
					"type": "number",
					"label": "Grundlast - Schwelle für Ein-/Ausschalten der Verbraucher",
					"default": 100,
					"min": 0,
					"max": 10000,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 6
				}
			}
		},
		"_consumer": {
			"type": "panel",
			"label": "Zuschaltbare Verbraucher",
			"items": {
				"consumer": {
					"type": "table",
					"label": "Verbraucher Liste",
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"showSecondAddAt": 10,
					"items": [
						{
							"type": "checkbox",
							"attr": "enabled",
							"title": "Aktiv"
						},
						{
							"type": "text",
							"attr": "name",
							"title": "Name"
						},
						{
							"type": "objectId",
							"attr": "datapoint",
							"title": "Steuer-Datenpunkt"
						},
						{
							"type": "number",
							"attr": "performance",
							"title": "Gesamtleistung des Verbrauchers (Watt)",
							"min": 1
						},
						{
							"type": "number",
							"attr": "switchOnPoint",
							"title": "Einschaltung (Watt)",
							"min": 1
						},
						{
							"type": "number",
							"attr": "switchOffPoint",
							"title": "Abschaltung (Watt)",
							"min": 0
						},
						{
							"type": "select",
							"attr": "ruletype",
							"title": "Regeltyp",
							"options": [
								{ "value": "binary", "label": "Ein/Aus" },
								{ "value": "percent", "label": "Prozentregelung" }
							],
							"default": "binary"
						},
						{
							"type": "number",
							"attr": "minPercentStart",
							"title": "Minimaler Steuerwert in % (ab wann die Regelung aktiv wird). Wird nur für Prozentregelung verwendet!",
							"min": 0,
							"max": 100,
							"default": 10
						},
						{
							"type": "text",
							"attr": "switchOnTime",
							"title": "Einschaltzeit (HH:MM)",
							"default": ""
						},
						{
							"type": "text",
							"attr": "switchOffTime",
							"title": "Ausschaltzeit (HH:MM)",
							"default": ""
						},
						{
							"type": "checkbox",
							"attr": "alwaysOffAtTime",
							"title": "Ausschalten nur zu Ausschaltzeit"
						}
					]
				}
			}
		}
	}
}
